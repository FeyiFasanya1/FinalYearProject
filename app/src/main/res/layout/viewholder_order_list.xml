<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/order_date"
        android:layout_width="74dp"
        android:layout_height="19dp"
        android:text="Order Date:"
        android:textColor="@color/black"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="26dp" />

    <TextView
        android:id="@+id/order_status"
        android:layout_width="87dp"
        android:layout_height="33dp"
        android:text="Order status:"
        android:textColor="@color/black"
        android:textSize="14sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="90dp" />

    <TextView
        android:id="@+id/order_price"
        android:layout_width="81dp"
        android:layout_height="24dp"
        android:text="Total price:"
        android:textColor="@color/black"
        android:textSize="14sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="156dp" />

    <TextView
        android:id="@+id/order_date_value"
        android:layout_width="81dp"
        android:layout_height="20dp"
        android:layout_marginStart="44dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/order_date"
        app:layout_constraintTop_toTopOf="@+id/order_date"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/order_price_value"
        android:layout_width="78dp"
        android:layout_height="27dp"
        android:layout_marginStart="36dp"
        android:text="â‚¬"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/order_price"
        app:layout_constraintStart_toEndOf="@+id/order_price"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/order_status_value"
        android:layout_width="159dp"
        android:layout_height="34dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="4dp"
        android:text="ORDER PROCESSED"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/order_status"
        app:layout_constraintTop_toTopOf="@+id/order_status"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>